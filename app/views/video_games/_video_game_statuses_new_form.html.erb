<%= form_with(model: @status, local: true) do |f| %>

  <%= f.hidden_field :game_id, value: @video_game.id %>

  <%= f.hidden_field :user_id, value: current_user.id %>

  <div class="form-group">
    <%= f.label :status %>

    <%= f.select :status, options_for_select(Status.statuses.keys), {}, class: "form-control" %>
  </div>

  <%= f.submit "Create status", class: "btn btn-block btn-outline-secondary" %>
<% end %>
