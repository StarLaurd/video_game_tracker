<div class="card">
  <div class="card-header d-flex align-items-center justify-content-between">
    Statuses

    <a data-toggle="collapse" href="#video_game_statuses_new_form">
      Add status
    </a>
  </div>

  <ul class="list-group list-group-flush">
    <% @video_game.statuses.each do |status| %>
      <li class="list-group-item d-flex align-items-center justify-content-between">
        <!-- Show link start -->
        <%= link_to status, status %>
        <!-- Show link end -->

        <!-- Delete link start -->
        <%= link_to status, method: :delete, data: { confirm: "Do you really want to delete this status" } do %>
          <i class="fas fa-trash-alt"></i>
        <% end %>
        <!-- Delete link end -->

      </li>
    <% end %>

    <div class="card-footer">
      <div class="collapse" id="video_game_statuses_new_form">
        <!-- New associationcollection form start -->
        <%= render partial: "video_games/video_game_statuses_new_form" %>
        <!-- New associationcollection form end -->
      </div>
    </div>

  </ul>
</div>
