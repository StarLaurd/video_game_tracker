<div class="card">
  <div class="card-header d-flex align-items-center justify-content-between">
    Notes

    <a data-toggle="collapse" href="#video_game_notes_new_form">
      Add note
    </a>
  </div>

  <ul class="list-group list-group-flush">
    <% @video_game.notes.each do |note| %>
      <li class="list-group-item d-flex align-items-center justify-content-between">
        <%= link_to note, note %>

        <%= link_to note, method: :delete, data: { confirm: "Do you really want to delete this note" } do %>
          <i class="fas fa-trash-alt"></i>
        <% end %>

      </li>
    <% end %>

    <div class="card-footer">
      <div class="collapse" id="video_game_notes_new_form">
        <%= render partial: "video_games/video_game_notes_new_form" %>
      </div>
    </div>

  </ul>
</div>
