<%= form_with(model: @rating, local: true) do |f| %>

  <div class="form-group">
    <%= f.label :game_id %>

    <%= f.collection_select :game_id, VideoGame.all, :id, :to_s, {}, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :user_id %>

    <%= f.collection_select :user_id, User.all, :id, :to_s, {}, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :rating %>

    <%= f.text_field :rating, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :review %>
    <%= f.text_area :review, rows: "3", class: "form-control" %>
  </div>

  <%= f.hidden_field :platform_id, value: @platform.id %>

  <%= f.submit "Create rating", class: "btn btn-block btn-outline-secondary" %>
<% end %>
