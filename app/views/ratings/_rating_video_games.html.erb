<div class="card">
  <div class="card-header d-flex align-items-center justify-content-between">
    Video Games

    <a data-toggle="collapse" href="#rating_video_games_new_form">
      Add video game
    </a>
  </div>

  <ul class="list-group list-group-flush">
    <% @rating.video_games.each do |video_game| %>
      <li class="list-group-item d-flex align-items-center justify-content-between">
        <!-- Show link start -->
        <%= link_to video_game, video_game %>
        <!-- Show link end -->

        <!-- Delete link start -->
        <%= link_to video_game, method: :delete, data: { confirm: "Do you really want to delete this video_game" } do %>
          <i class="fas fa-trash-alt"></i>
        <% end %>
        <!-- Delete link end -->

      </li>
    <% end %>

    <div class="card-footer">
      <div class="collapse" id="rating_video_games_new_form">
        <!-- New associationcollection form start -->

        <!-- New associationcollection form end -->
      </div>
    </div>

  </ul>
</div>
