<div class="card mb-3">
  <h2 class="card-header h4">
    Status #<%= status.id %>
  </h2>

  <div class="card-body">
    <dl class="mb-1">
      <dt>Game</dt>
      <dd>
        <% if @status.game.present? %>
          <%= link_to status.game, status.game %>
        <% end %>
      </dd>

      <dt>User</dt>
      <dd>
        <% if @status.user.present? %>
          <%= link_to status.user, status.user %>
        <% end %>
      </dd>

      <dt>Status</dt>
      <dd><%= status.status %></dd>

    </dl>

    <div class="row">
      <div class="col">
        <%= link_to_show_or_back status, '<i class="fas fa-search-plus"></i>'.html_safe, '<i class="fas fa-chevron-left"></i>'.html_safe, class: "btn btn-block btn-outline-secondary" %>
      </div>

      <div class="col">
        <% if current_user == @status.user %>
          <%= link_to edit_status_url(status), class: "btn btn-block btn-sm btn-outline-secondary" do %>
            <i class="fas fa-edit"></i>
          <% end %>
        <% end %>
      </div>

      <div class="col">
        <% if current_user == @status.user %>
          <%= link_to status, method: :delete, data: { confirm: "Do you really want to delete this status?" }, class: "btn btn-block btn-outline-secondary" do %>
            <i class="fas fa-trash-alt"></i>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>

  <div class="card-footer text-muted">
    Last updated <%= time_ago_in_words(status.updated_at) %> ago
  </div>
</div>
